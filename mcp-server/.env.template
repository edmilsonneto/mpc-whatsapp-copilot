# MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
MCP_HOST=localhost
MCP_PORT=8000
MCP_DEBUG=false
MCP_LOG_LEVEL=INFO
MCP_MAX_WORKERS=4
MCP_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION  
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# =============================================================================
# VS CODE CONFIGURATION
# =============================================================================
VSCODE_PATH=
VSCODE_WORKSPACE=
VSCODE_TIMEOUT=10
VSCODE_PORT=8001

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================
WHATSAPP_WEBHOOK_URL=http://localhost:3000/webhook
WHATSAPP_SESSION_TIMEOUT=3600
WHATSAPP_RATE_LIMIT=20
WHATSAPP_ALLOWED_USERS=

# =============================================================================
# GITHUB COPILOT CONFIGURATION
# =============================================================================
COPILOT_API_KEY=
COPILOT_MODEL=copilot-codex
COPILOT_MAX_TOKENS=2048
COPILOT_TEMPERATURE=0.7
COPILOT_TIMEOUT=15

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-change-this-to-something-secure
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=8002
HEALTH_CHECK_INTERVAL=30
LOG_REQUESTS=true

# =============================================================================
# OPTIONAL: CONFIG FILE PATH
# =============================================================================
MCP_CONFIG_FILE=config.json
